#!groovy
properties(
  [
    [
      $class       : 'GithubProjectProperty',
      projectUrlStr: 'https://github.com/hmcts/am-role-assignment-batch-service'
    ],
    pipelineTriggers([[$class: 'GitHubPushTrigger']])
  ]
)

@Library("Infrastructure")

def type = "java"
def product = "am"
def component = "role-assignment-batch-service"

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [$class     : 'AzureKeyVaultSecret',
   secretType : 'Secret',
   name       : secretName,
   version    : '',
   envVariable: envVar
  ]
}

def vaultOverrides = [
    'preview' : 'aat',
    'spreview': 'saat'
]

def secrets = [

]

withPipeline(type, product, component) {
  onMaster {
    enableSlackNotifications('#am-role-assignment-batch-service-builds')
  }
  onPR {
    enableSlackNotifications('#am-role-assignment-batch-service-builds')
  }

  overrideVaultEnvironments(vaultOverrides)
  //loadVaultSecrets(secrets)
  enableAksStagingDeployment()
  disableLegacyDeploymentOnAAT()
  disableLegacyDeployment()
  nonServiceApp()

  after('test:preview') {
    steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/target/site/serenity/**'
  }

  after('test:aat') {
    steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/target/site/serenity/**'
  }

  after('checkout') {
    onMaster {
      withCredentials([usernamePassword(credentialsId: 'jenkins-github-hmcts-api-token', usernameVariable: 'USERNAME', passwordVariable: 'BEARER_TOKEN')]) {
        sh '''
          set -e
          git remote set-url origin $(git config remote.origin.url | sed "s/github.com/${BEARER_TOKEN}@github.com/g")
        '''

        try {
          sh '''
            git fetch origin demo:demo
            git push --force origin HEAD:demo
          '''
        } catch (err) {
          notifyBuildEvent channel: '#am-master-builds', color: 'warning', message: 'Failed to update demo branch'
        }

        try {
          sh '''
            git fetch origin perftest:perftest
            git push --force origin HEAD:perftest
          '''
        } catch (err) {
          notifyBuildEvent channel: '#am-master-builds', color: 'warning', message: 'Failed to update perftest branch'
        }
      }
    }
    sh """ git submodule update --init """
  }
}